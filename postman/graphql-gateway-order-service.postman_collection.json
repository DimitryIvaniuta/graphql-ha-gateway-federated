        {
          "name": "Create Order (REST)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{ORDER_URL}}/internal/orders",
              "host": [
                "{{ORDER_URL}}"
              ],
              "path": [
                "internal",
                "orders"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"00000000-0000-0000-0000-000000000001\",\n  \"externalId\": \"EXT-123\",\n  \"items\": [\n    { \"sku\": \"SKU-1\", \"quantity\": 2, \"price\": { \"amount\": 10.00, \"currency\": \"USD\" } },\n    { \"sku\": \"SKU-2\", \"quantity\": 1, \"price\": { \"amount\": 10.00, \"currency\": \"USD\" } }\n  ]\n}"
            }
          },
          "response": []
        },
        {
          "name": "Change Order Status (REST)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{ORDER_URL}}/internal/orders/{{ORDER_ID}}/status",
              "host": [
                "{{ORDER_URL}}"
              ],
              "path": [
                "internal",
                "orders",
                "{{ORDER_ID}}",
                "status"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{ \"status\": \"CONFIRMED\" }"
            }
          },
          "response": []
        }
      ]
    },
    {
